<div class="header-main">
  <div class="header-left">
    <div class="collection-heading">
      <button class="menu-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <h2 class="shop-by">
        Shop by Collection
      </h2>
    </div>
    <div class="collection-list">
      {% for collection in collections %}
        <div class="collection-item">
          <a class="collection-title" href="/collections/{{ collection.handle }}">
            {{ collection.title }}
          </a>
        </div>
      {% endfor %}
    </div>

  </div>

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide" style="background: url('{{ 'truck-bg.png' | asset_url }}') no-repeat center center; background-size: cover;">
        <div class="slider-cont">
          <h2 class="slider-heading">
            HOTTEST <br>
            SNAPBACKS
          </h2>
          <button class="hero-btn">SHOP NOW</button>
        </div>
      </div>
      <div class="swiper-slide" style="background: url('{{ 'h2r-bg.jpg' | asset_url }}') no-repeat center center; background-size: cover;">
        <div class="slider-cont">
          <h2 class="slider-heading">
            HOTTEST <br>
            SNAPBACKS 2
          </h2>
          <button class="hero-btn">SHOP NOW 2</button>
        </div>
      </div>
    </div>
    <!-- Swiper buttons -->
    <button class="swiper-button-next"></button>
    <button class="swiper-button-prev"></button>
  </div>

  <div class="header-left">
    <a href="">
      <div class="women-cap"></div>
    </a>

    <a href="">
      <div class="kids-cap"></div>
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Header",
    "settings": [],
    "presets": [
      {
        "name": "Custom Header",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  var swiper = new Swiper(".mySwiper", {
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    
    loop: true, // Enable infinite loop
  });
</script>